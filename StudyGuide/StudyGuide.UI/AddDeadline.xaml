<Window x:Class="StudyGuide.UI.AddDeadline"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyGuide.UI"
        mc:Ignorable="d"
        Title="Add a new deadline" Height="300" Width="500">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Tempus Sans ITC"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
    </Window.Resources>

    <Grid Background="#C1FFC1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition/>
                <RowDefinition Height="1.5*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" Margin="10,0,162,0">Choose a subjest</TextBlock>
            <ComboBox Grid.Row="1" Margin="5,5,74,5"></ComboBox>
            <TextBlock HorizontalAlignment="Center" Grid.Row="2" Margin="10,0,140,0">Choose a worktype</TextBlock>
            <ComboBox Grid.Row="3" Margin="5,5,74,5"></ComboBox>
            <TextBlock HorizontalAlignment="Center" Grid.Row="4" Margin="10,5,222,35" Grid.RowSpan="2">Deadline:</TextBlock>
            <DatePicker  HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="5" VerticalAlignment="Top" Width="178" Text="вавав" />
            <TextBlock Grid.Row="5" Margin="10,39,-10,1" Grid.RowSpan="2">Days for working:</TextBlock>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="6*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" Margin="54,0,79,0">Tasks:</TextBlock>
            <Button x:Name="Next" Content="Next" Background="#43CD80" HorizontalAlignment="Left" Margin="45,5,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" FontSize="14"/>
        </Grid>
    </Grid>
</Window>