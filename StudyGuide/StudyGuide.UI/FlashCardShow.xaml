<Window x:Class="StudyGuide.UI.FlashCardShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudyGuide.UI"
        mc:Ignorable="d"
        Title="FlashCardShow" Height="350" Width="525">
    <Grid>
        <TextBlock x:Name="textblock1" Margin="50,50,50,70"/>
        <Button x:Name="checkButton" Margin="200,250,200,20" Click="Button_Click" BorderThickness="0">Check
        </Button>
        <Button x:Name="wrongButton" Margin="50,250,0,20" HorizontalAlignment="Left" Width="100" BorderThickness="0" Content="Wrong"/>
        <Button x:Name="rightButton" Margin="50,250,50,20" HorizontalAlignment="Right" Width="100"  BorderThickness="0" Content="Right"/>
    </Grid>
</Window>
